@model CSIMediaTest.Models.Sequence

@{
    ViewBag.Title = "Index";
}

<h2>The home page of NumberWang</h2>

<!--Form for sequence input-->
@using (Html.BeginForm("Index", "Home"))
{
    <form>
        <div class="form-group">
            @Html.Label("sequence_id", "Sequence: ")
            @Html.TextBoxFor(s => s.NewSequence, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(seq => seq.NewSequence, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Order: ")<br />

            Ascending: @Html.RadioButtonFor(d => d.Direction, "Ascending", new { @checked = "checked" })  <br />
            Descending: @Html.RadioButtonFor(d => d.Direction, "Descending")
        </div>
        <input type="submit" />
    </form>
}



